.process_card_heading {
	display: flex;
	flex-direction: row;
	align-items: center;
	align-self: stretch;
	gap: var(--space-4);
	padding-right: 56px;
}

.process_card_heading_no_button {
	padding-right: 0;
	justify-content: center;
	flex: 1 0 0;
}

.process_card_title {
	display: flex;
	flex: 1 0 0;
	justify-content: center;
	font-size: 1.125rem;
	font-weight: 400;
	line-height: 22px;
	color: var(--color-gray-700);
}
